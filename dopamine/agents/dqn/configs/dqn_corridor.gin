# Hyperparameters for a simple DQN-style Acrobot agent. The hyperparameters
# chosen achieve reasonable performance.
import dopamine.discrete_domains.corridor_lib
import dopamine.discrete_domains.run_experiment
import dopamine.agents.dqn.dqn_agent
import dopamine.replay_memory.circular_replay_buffer
import gin.tf.external_configurables

DQNAgent.observation_shape = %corridor_lib.CORRIDOR_OBSERVATION_SHAPE
DQNAgent.observation_dtype = %corridor_lib.CORRIDOR_OBSERVATION_DTYPE
DQNAgent.stack_size = %corridor_lib.CORRIDOR_STACK_SIZE
DQNAgent.network = @corridor_lib.corridor_dqn_network
DQNAgent.gamma = 0.99
DQNAgent.update_horizon = 3
DQNAgent.min_replay_history = 2000
DQNAgent.update_period = 10
DQNAgent.target_update_period = 10
DQNAgent.epsilon_train = 0
DQNAgent.epsilon_eval = 0
DQNAgent.epsilon_decay_period = 250000 # agent steps
DQNAgent.tf_device = '/cpu:*'  # use '/cpu:*' for non-GPU version
DQNAgent.optimizer = @tf.train.AdamOptimizer()

create_agent.agent_name = 'dqn'
create_corridor_environment.N = 10
Runner.create_environment_fn = @corridor_lib.create_corridor_environment
Runner.num_iterations = 30
Runner.training_steps = 10000
Runner.evaluation_steps = 1000
Runner.max_steps_per_episode = 500

WrappedReplayBuffer.replay_capacity = 100000
WrappedReplayBuffer.batch_size = 128